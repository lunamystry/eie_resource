-extends "base.haml"
-block body
  %div.form-horizontal 
   %form method="POST" action="/get_ipaddress"
     %fieldset
      %legend
         Register to have DHCP assign you an IP address
      {{ form.hidden_tag() }}        
      %div.control-group
        {{ form.name.label(class="control-label") }} 
        %div.controls 
          {{ form.name(size=20) }}
          -for error in form.errors.name
            %span.alert.alert-error
              {{error}}
