-extends "main_layout.haml"
-block body
  %div.form-horizontal 
   %form method="POST" action="."
     %fieldset
      %legend
         Register to have DHCP assign you an IP address
      %div.control-group
        {{ form.name.label(class="control-label") }} 
        %div.controls << {{ form.name(size=20) }}
      %div.control-group
        {{ form.student_number.label(class="control-label") }} 
        %div.controls << {{ form.student_number(size=20) }}
      %div.control-group
        {{ form.yos.label(class="control-label") }} 
        %div.controls << {{ form.yos(size=20) }}
      %div.control-group
        {{ form.email.label(class="control-label") }} 
        %div.controls << {{ form.email(size=20) }}
      %div.control-group
        {{ form.mac.label(class="control-label") }} 
        %div.controls << {{ form.mac(size=20) }}
      %div.control-group
        {{ form.domain.label(class="control-label") }} 
        %div.controls << {{ form.domain(size=20) }}
      %div.control-group
        {{ form.supervisor_name.label(class="control-label") }} 
        %div.controls << {{ form.supervisor_name(size=20) }}
      %div.control-group
        {{ form.supervisor_email.label(class="control-label") }} 
        %div.controls << {{ form.supervisor_email(size=20) }}
      %div.control-group
        %div.controls 
          %input class='btn' type="submit" value="Submit"
