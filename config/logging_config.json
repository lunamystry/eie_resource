{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s %(name)s: %(asctime)s - %(message)s",
            "datefmt": "%a, %d %b %Y [%H:%M:%S]"
        },
        "werkzeug": {
            "format": "%(name)s: %(message)s",
            "datefmt": "%a, %d %b %Y [%H:%M:%S]"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "werkzeug": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "werkzeug",
            "stream": "ext://sys.stdout"
        },
        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "/var/log/eie_logs/info.log",
            "maxBytes": "10485760",
            "backupCount": "20",
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "/var/log/eie_logs/errors.log",
            "maxBytes": "10485760",
            "backupCount": "20",
            "encoding": "utf8"
        }
    },

    "loggers": {
        "eieldap": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": "no"
        },
        "werkzeug": {
            "level": "INFO",
            "handlers": ["werkzeug"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "WARNING",
        "handlers": ["info_file_handler", "error_file_handler"]
    }
}
